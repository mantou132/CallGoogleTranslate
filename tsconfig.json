{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["es2018", "dom"],
    "typeRoots": ["./src/types"]
  },
  "include": ["src"]
}
